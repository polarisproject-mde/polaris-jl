{
  "version": 2,
  "builds": [
    { 
      "src": "main.py", 
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    { 
      "src": "/(.*)", 
      "dest": "main.py",
      "headers": {
        "Access-Control-Allow-Credentials": "true"
      }
    }
  ],
  "env": {
    "ENVIRONMENT": "production"
  }
}